<rests xmlns="http://camel.apache.org/schema/spring">
    <rest>
        <post uri="/add-employee" consumes="application/json" produces="application/json"
              type="com.assignment.pojo.Employee" bindingMode="json">
            <route>
                <process ref="employeeProcessor"/>
                <marshal>
                    <json library="Jackson" unmarshalTypeName="com.assignment.pojo.Employee" />
                </marshal>
                <inOnly uri="activemq:queue:employee_queue"/>
                <setBody>
                    <constant>Employee in enqueue for further processing</constant>
                </setBody>
            </route>
        </post>
    </rest>

</rests>